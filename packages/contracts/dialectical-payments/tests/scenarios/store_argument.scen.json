{
    "name": "store_argument",
    "comment": "Tests argument storage by relayer and retrieval",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:owner": {
                    "nonce": "0",
                    "balance": "100,000,000,000,000,000,000"
                },
                "address:relayer": {
                    "nonce": "0",
                    "balance": "1,000,000,000,000,000,000"
                }
            },
            "newAddresses": [
                {
                    "creatorAddress": "address:owner",
                    "creatorNonce": "0",
                    "newAddress": "sc:dialectical-payments"
                }
            ]
        },
        {
            "step": "scDeploy",
            "id": "deploy",
            "tx": {
                "from": "address:owner",
                "contractCode": "mxsc:output/dialectical-payments.mxsc.json",
                "arguments": [],
                "gasLimit": "50,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0"
            }
        },
        {
            "step": "scCall",
            "id": "set-relayer",
            "tx": {
                "from": "address:owner",
                "to": "sc:dialectical-payments",
                "function": "setRelayer",
                "arguments": ["address:relayer"],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0"
            }
        },
        {
            "step": "scCall",
            "id": "store-argument-1",
            "tx": {
                "from": "address:relayer",
                "to": "sc:dialectical-payments",
                "function": "storeArgument",
                "arguments": ["u64:1", "u64:1", "u8:0", "u32:8500", "str:This is a pro argument supporting the thesis with detailed reasoning and evidence."],
                "gasLimit": "30,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0"
            }
        },
        {
            "step": "scCall",
            "id": "store-argument-2",
            "tx": {
                "from": "address:relayer",
                "to": "sc:dialectical-payments",
                "function": "storeArgument",
                "arguments": ["u64:2", "u64:1", "u8:1", "u32:7200", "str:This is a counter-argument challenging the thesis with compelling evidence."],
                "gasLimit": "30,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0"
            }
        },
        {
            "step": "scQuery",
            "id": "get-argument-1",
            "tx": {
                "to": "sc:dialectical-payments",
                "function": "getArgument",
                "arguments": ["u64:1"]
            },
            "expect": {
                "out": ["str:This is a pro argument supporting the thesis with detailed reasoning and evidence."],
                "status": "0"
            }
        },
        {
            "step": "scQuery",
            "id": "get-debate-arguments",
            "tx": {
                "to": "sc:dialectical-payments",
                "function": "getDebateArguments",
                "arguments": ["u64:1"]
            },
            "expect": {
                "out": ["u64:1", "u64:2"],
                "status": "0"
            }
        }
    ]
}
